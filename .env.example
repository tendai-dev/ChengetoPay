# Database Connection Strings
# Replace these with your actual connection strings

# PostgreSQL (Neon or other provider)
POSTGRES_URL=postgres://username:password@host:5432/chengetopay?sslmode=require

# MongoDB (Atlas or other provider)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/chengetopay?retryWrites=true&w=majority

# Redis (Local or cloud provider)
REDIS_URL=redis://username:password@host:6379/0

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-here
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# Service Configuration
SERVICE_DISCOVERY_URL=http://consul:8500
VAULT_URL=http://vault:8200
VAULT_TOKEN=your-vault-token

# Monitoring
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
JAEGER_URL=http://jaeger:14268

# API Configuration
API_GATEWAY_PORT=8080
RATE_LIMIT_PER_MINUTE=100
CORS_ALLOWED_ORIGINS=*

# Environment
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=false
